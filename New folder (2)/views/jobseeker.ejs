        .job-card {
            background-color: rgb(229, 234, 236);
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            width: 300px;
            text-align: left;
            position: relative;
        }

        .job-card h2 {
            font-size: 1.5rem;
            color: #4a148c;
            margin-bottom: 10px;
        }

        .job-card h3 {
            font-size: 1.2rem;
